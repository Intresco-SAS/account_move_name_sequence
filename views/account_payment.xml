<?xml version="1.0" encoding="utf-8" ?>

<odoo>
<record id="inherit_view_id_inherit_account_payment" model="ir.ui.view">
    <field name="name">model.account.payment.view.form.inherit</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="arch" type="xml">
        <xpath expr="/form/sheet/group/group/field[1]" position="replace">
            <field name="payment_type" widget="radio" readonly="1"/>
        </xpath>
        <xpath expr="/form/sheet/group/group/field[2]" position="replace">
            <field name="partner_type" readonly="1" widget="selection" attrs="{'invisible': [('is_internal_transfer', '=', True)]}"/>
        </xpath>
    </field>
</record>
    

</odoo>

